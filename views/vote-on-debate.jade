extends layout

block content

	#page
		#sessionCode.hidden #{sessionCode}
		
		h3#sessionIsPending.hidden 
			span The debate will begin shortly. 
			br
			span Thanks for your patience.
		h3#sessionOver.hidden 
			span The debate is over. 
			br
			span Thanks for voting!

		#sessionIsLive.hidden
			button#voteForA.u-full-width.game-button #{participantA}
			br
			br
			button#undecided.u-full-width.game-button #{undecided}
			br
			br
			button#voteForB.u-full-width.game-button #{participantB}

	script(src="/javascripts/vote-on-debate.js")
